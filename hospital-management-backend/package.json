{
  "name": "hospital-management-backend",
  "version": "1.0.0",
  "description": "Hospital Management System - Microservices Backend",
  "private": true,
  "workspaces": [
    "auth-service",
    "patient-service", 
    "appointment-service",
    "prescription-service",
    "notification-service",
    "analytics-service",
    "api-gateway",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:patient\" \"npm run dev:appointment\" \"npm run dev:prescription\" \"npm run dev:notification\" \"npm run dev:analytics\" \"npm run dev:gateway\"",
    "dev:auth": "cd auth-service && npm run dev",
    "dev:patient": "cd patient-service && npm run dev",
    "dev:appointment": "cd appointment-service && npm run dev", 
    "dev:prescription": "cd prescription-service && npm run dev",
    "dev:notification": "cd notification-service && npm run dev",
    "dev:analytics": "cd analytics-service && npm run dev",
    "dev:gateway": "cd api-gateway && npm run dev",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspaces",
    "test": "npm run test --workspaces",
    "install-all": "npm install && npm install --workspaces",
    "clean": "npm run clean --workspaces",
    "docker:build": "docker-compose -f ../docker-compose.yml build",
    "docker:up": "docker-compose -f ../docker-compose.yml up -d",
    "setup:admin": "node scripts/setup-admin.js",
    "setup:full": "npm run docker:up && sleep 10 && npm run setup:admin"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
